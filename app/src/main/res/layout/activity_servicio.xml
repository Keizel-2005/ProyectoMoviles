<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitleServicios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        android:text="@string/menu_services"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Sección de búsqueda -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/txtBuscarServicio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/serch_barra"
            android:padding="10dp" />

        <ImageButton
            android:id="@+id/btnBuscarServicio"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/cd_buscar"
            android:onClick="BuscarServicio"
            android:src="@drawable/ic_buscar" />
    </LinearLayout>

    <!-- Listado de servicios -->
    <ListView
        android:id="@+id/listViewServicios"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:dividerHeight="10dp" />

    <!-- Botones inferiores -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <ImageButton
            android:id="@+id/btnAgregarServicio"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/cd_agregar"
            android:onClick="InsertarServicio"
            android:src="@drawable/ic_agregar" />

        <ImageButton
            android:id="@+id/btnEditarServicio"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/cd_editar"
            android:onClick="UpdateServicio"
            android:src="@drawable/ic_editar" />

        <ImageButton
            android:id="@+id/btnEliminarServicio"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/cd_eliminar"
            android:onClick="EliminarServicio"
            android:src="@drawable/ic_eliminar" />

        <ImageButton
            android:id="@+id/btnSalirServicio"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/cd_salir"
            android:onClick="regresarServicio"
            android:src="@drawable/ic_regresar" />
    </LinearLayout>

</LinearLayout>
