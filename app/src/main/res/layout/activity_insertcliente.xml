<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <EditText
            android:id="@+id/txtCedulaCliente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/hint_cedula_clientee"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/txtNombreCliente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/hint_nombre"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtCedulaCliente" />

        <EditText
            android:id="@+id/txtApellidosCliente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/hint_apellidos"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtNombreCliente" />

        <EditText
            android:id="@+id/txtTelefonoCliente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/hint_telefono"
            android:inputType="phone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtApellidosCliente" />

        <EditText
            android:id="@+id/txtCorreoCliente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/hint_correo"
            android:inputType="textEmailAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtTelefonoCliente" />

        <ImageView
            android:id="@+id/imageViewFoto1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="136dp"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_camera"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtCorreoCliente" />

        <Button
            android:id="@+id/btnTomarFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:onClick="tomarFoto"
            android:text="Tomar Foto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageViewFoto1" />

        <LinearLayout
            android:id="@+id/audioButtonsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnTomarFoto">

            <Button
                android:id="@+id/btnIniciarGrabacion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="iniciarGrabacion"
                android:text="Grabar" />

            <Button
                android:id="@+id/btnDetenerGrabacion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="detenerGrabacion"
                android:text="Detener" />

            <Button
                android:id="@+id/btnIniciarReproduccion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="iniciarReproduccion"
                android:text="Reproducir" />

            <Button
                android:id="@+id/btnDetenerReproduccion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="detenerReproduccion"
                android:text="Detener" />
        </LinearLayout>

        <EditText
            android:id="@+id/txtLatitud"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Latitud"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/audioButtonsLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/txtLongitud"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Longitud"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/txtLatitud"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <org.osmdroid.views.MapView
            android:id="@+id/mapCliente"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/txtLongitud"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btnGuardarCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:onClick="GuardarCliente"
            android:text="@string/btn_guardar"
            app:layout_constraintTop_toBottomOf="@id/mapCliente"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnRegresarCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="RegresarListCliente"
            android:text="@string/btn_regresar"
            app:layout_constraintTop_toBottomOf="@id/mapCliente"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
